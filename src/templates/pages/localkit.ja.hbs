			$('div.keyvisual span#github-published_at span#published_Date').text(dateJa);

			$("a.localkit_download_for_win").attr("href",res.data[0].assets[0].browser_download_url);
			$("a.localkit_download_for_mac").attr("href",res.data[0].assets[1].browser_download_url);

			$('div.btns a').fadeIn(fadeInSpeed);
			$('div.keyvisual span#github-published_at').fadeIn(fadeInSpeed);
			$('div.box-try').fadeIn(fadeInSpeed);	
		},
		error: function() {
			$('div.keyvisual span#github-published_at').hide();
			$('div.btns a').hide();
			$('div.box-try').hide();
		}
	}); 
});
