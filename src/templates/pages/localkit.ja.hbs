$(window).load(function() {
	var fadeInSpeed = 400;
	$('div.keyvisual span#github-published_at').hide();
	$('div.btns a').hide();
	$("div.box-try").wrap($('<section class="btns_box_body"></section>'));
	$('div.box-try').hide();
	$.ajax({
		url: 'https://api.github.com/repos/monaca/Localkit/releases',
		dataType: 'jsonp',
		success: function(res) {
			$("div.keyvisual span#github-published_at").append($('<a href="https://github.com/monaca/Localkit/releases">バージョン<strong></strong></a> / <span id="published_Date"></span>'));
