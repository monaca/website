<!DOCTYPE html>
<html lang="{{language}}" prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
<head>
    <meta charset="UTF-8">

    {{#compare viewport "typeof" "string"}}
        <meta name="viewport" content="{{viewport}}">
    {{else}}
        <meta name="viewport" content="width=device-width, initial-scale=1">
    {{/compare}}

    <title>
        {{#compare title "typeof" "string"}}
            {{#is language "ja"}}
                {{title}}
            {{else}}
                {{title}} | Monaca
            {{/is}}
        {{else}}
            {{#is language "ja"}}
                {{title.ja}}
            {{else}}
                {{title.en}} | Monaca
            {{/is}}
        {{/compare}}
    </title>
    <meta name="keywords" content="
        {{#compare keywords "typeof" "string"}}
            {{keywords}}
        {{else}}
            {{#is language "ja"}}Cordova,モバイルアプリ開発,iPhone開発,Android開発,ハイブリッドアプリ,クロスプラットフォーム,PhoneGap,Monaca
            {{else}}mobile app development,iphone development,android development,hybrid app,cross-platform,phonegap app,monaca,windows store development{{/is}}
        {{/compare}}
    ">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link rel="shortcut icon" href="/img/favicon.ico">
    <script src="/js/jquery.min.js"></script>

    <meta property="og:type" content="article">
    <meta property="og:title" content="
        {{#compare title "typeof" "string"}}
            {{#is language "ja"}}
                {{title}}
            {{else}}
                {{title}} | Monaca
            {{/is}}
        {{else}}
            {{#is language "ja"}}
                {{title.ja}}
            {{else}}
                {{title.en}} | Monaca
            {{/is}}
        {{/compare}}
    ">
    <meta property="og:image" content="{{#compare image "typeof" "string"}}{{image}}{{else}}https://monaca.io/img/ogp.png{{/compare}}">
    <meta property="fb:admins" content="597508315" >
    <meta name="twitter:site" content="@monaca_io">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="@monaca_io">
    <meta name="twitter:image" content="https://monaca.io/img/ogp.png">
    <meta property="twitter:title" content="
        {{#compare title "typeof" "string"}}
            {{#is language "ja"}}
                {{title}}
            {{else}}
                {{title}} | Monaca
            {{/is}}
        {{else}}
            {{#is language "ja"}}
                {{title.ja}}
            {{else}}
                {{title.en}} | Monaca
            {{/is}}
        {{/compare}}
    ">

    {{#compare description "typeof" "string"}}
        <meta name="description" content="{{description}}">
        <meta property="og:description" content="{{description}}">
        <meta name="twitter:description" content="{{description}}">
    {{/compare}}
</head>

<body class="{{class}}">

    {{> header }}
    {{> notificationHeader }}
    <article class="main" role="main">

      {{> body }}

    </article>

    {{> footer }}

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/all.js"></script>
    <script>
      window.LANG = "{{language}}";
      window.NOTIFICATION_MESSAGE_URL = "https://642dad3ff5abc36218998a19ee31a174f322b763.googledrive.com/host/0B-F5PfgMvTC9dmJONEtWY2xCRm8/emergency_notification/emergency_header.json";
    </script>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet" type="text/css">		
  </body>
</html>
